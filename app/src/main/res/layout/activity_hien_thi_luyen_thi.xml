<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.doan.learnjapanese.LuyenThi.HienThiLuyenThi">
    <LinearLayout

        android:weightSum="1"
        android:layout_marginTop="22dp"
        android:layout_weight="0.2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:id="@+id/imageView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:src="@drawable/dung" />

        <TextView
            android:gravity="center|center_vertical"
            android:id="@+id/txtvTLDung"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="1111" />

        <ImageView
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:id="@+id/imageView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:src="@drawable/sai"  />

        <TextView
            android:gravity="center|center_vertical"
            android:id="@+id/txtvTLSai"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:ems="10"
            android:text="1111" />

        <RelativeLayout

            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.35">
            <ProgressBar

                android:id="@+id/progressBar"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:indeterminate="false"
                android:progressDrawable="@drawable/custom_process1"
                android:background="@drawable/cricle_shape"
                style="?android:attr/progressBarStyleHorizontal"
                android:max="10"
                android:progress="10" />

            <TextView
                android:textSize="20dp"
                android:textColor="#000"
                android:gravity="center"
                android:id="@+id/txtvThoiGian"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="99"
                android:layout_centerVertical="true"
                android:layout_alignRight="@+id/progressBar"
                android:layout_alignEnd="@+id/progressBar"
                />
        </RelativeLayout>

        <TextView
            android:paddingBottom="25dp"
            android:textSize="18dp"
            android:gravity="center"
            android:id="@+id/txtvTong"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="00/99" />
    </LinearLayout>

    <LinearLayout
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="vertical"
        android:padding="15dp">
        <TextView
            android:textSize="18dp"
            android:textColor="@color/text"
            android:gravity="center"
            android:layout_weight="0.2"
            android:id="@+id/txtvCauHoi2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="TextView" />
        <LinearLayout
            android:paddingTop="20dp"
            android:layout_marginTop="20dp"
            android:weightSum="1"
            android:layout_weight="0.4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal">

            <Button
                android:minHeight="60dp"
                android:textSize="16dp"
                android:background="@drawable/custom_button"
                android:id="@+id/btnda1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Button" />

            <Button
                android:minHeight="60dp"
                android:textSize="16dp"
                android:background="@drawable/custom_button"
                android:layout_marginLeft="20dp"
                android:id="@+id/btnda2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Button" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_vertical"
            android:weightSum="1"
            android:layout_weight="0.4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal">

            <Button
                android:minHeight="60dp"
                android:textSize="16dp"
                android:background="@drawable/custom_button"
                android:id="@+id/btnda3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Button" />

            <Button
                android:minHeight="60dp"
                android:textSize="16dp"
                android:background="@drawable/custom_button"
                android:layout_marginLeft="20dp"
                android:id="@+id/btnda4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Button" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
